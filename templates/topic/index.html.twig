{% extends 'base.html.twig' %}

{% block title %}
	{{ 'List Topics' | trans }}
{% endblock %}

{% block body %}
	<main class="container-fluid">
		<div class="container-fluid">
			{{ include('topic/_list.html.twig')}}
			<div id="toolbar"></div>
			<span class="pull-right">
				<a href="{{ path('topic_new')}}" class="btn btn-primary rounded-circle fixed-bottom-right">
					<i class="fa fa-plus" title='{{ "btn.new" | trans | capitalize }}'></i>
				</a>
			</span>
		</div>
		{{ include('common/_alert.html.twig') }}
	</main>
{% endblock %}